<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="@string/tv_playerTitle"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        tools:layout_editor_absoluteY="49dp" />

    <ImageButton
        android:id="@+id/img_paper"
        android:layout_width="156dp"
        android:layout_height="161dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/paper"
        app:layout_constraintStart_toStartOf="@+id/img_rock"
        app:layout_constraintTop_toBottomOf="@+id/img_rock" />

    <ImageButton
        android:id="@+id/img_rock"
        android:layout_width="125dp"
        android:layout_height="106dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/rock"
        app:layout_constraintStart_toStartOf="@+id/img_scissors"
        app:layout_constraintTop_toBottomOf="@+id/img_scissors" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:text="@string/tv_comTitle"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="49dp" />

    <ImageView
        android:id="@+id/imgtv_com"
        android:layout_width="122dp"
        android:layout_height="116dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="144dp"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/img_scissors"
        android:layout_width="131dp"
        android:layout_height="154dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/scissors"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgtv_com"
        app:layout_constraintTop_toBottomOf="@+id/imgtv_com"
        app:layout_constraintVertical_bias="0.212" />


</androidx.constraintlayout.widget.ConstraintLayout>